generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["debian-openssl-1.1.x", "darwin", "darwin-arm64", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  code    String   @id @unique
  name    String
  records Record[]
}

model Worker {
  id      Int      @id @unique
  name    String
  records Record[]
}

model Admin {
  hash           String
  login          String         @id @unique
  createdRecords Record[]       @relation("CreatorRecords")
  changedRecords RecordChange[] @relation("ChangerRecords")
}

model Record {
  id          Int            @id @default(autoincrement())
  workerID    Int
  productCode String
  amount      Int
  createdAt   DateTime
  createdBy   String
  isDeleted   Boolean        @default(false)
  creator     Admin          @relation("CreatorRecords", fields: [createdBy], references: [login])
  product     Product        @relation(fields: [productCode], references: [code])
  worker      Worker         @relation(fields: [workerID], references: [id])
  edits       RecordChange[]
}

model RecordChange {
  id          Int      @id @default(autoincrement())
  recordId    Int
  action      String
  amount      Int
  workerID    Int
  productCode String
  changedBy   String
  changedAt   DateTime @default(now())
  changer     Admin    @relation("ChangerRecords", fields: [changedBy], references: [login])
  record      Record   @relation(fields: [recordId], references: [id])
}
