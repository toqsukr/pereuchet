generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["debian-openssl-1.1.x", "darwin", "darwin-arm64", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  code    String   @id @unique
  name    String
  records Record[]
}

model Worker {
  id      Int      @id @unique
  name    String
  records Record[]
}

model Admin {
  login           String         @id @unique
  hash            String
  createdRecords  Record[]       @relation("CreatorRecords")
  changnedRecords RecordChange[] @relation("ChangerRecords")
}

model Record {
  id          Int            @id @default(autoincrement())
  createdAt   DateTime
  createdBy   String
  amount      Int
  workerID    Int
  productCode String
  isDeleted   Boolean        @default(false)
  edits       RecordChange[]
  worker      Worker         @relation(fields: [workerID], references: [id])
  product     Product        @relation(fields: [productCode], references: [code])
  creator     Admin          @relation("CreatorRecords", fields: [createdBy], references: [login])
}

model RecordChange {
  id          Int      @id @default(autoincrement())
  recordId    Int
  action      String // 'CREATED' | 'EDITED' | 'DELETED'
  amount      Int
  workerID    Int
  productCode String
  changedBy   String
  changedAt   DateTime @default(now())
  record      Record   @relation(fields: [recordId], references: [id])
  changer     Admin    @relation("ChangerRecords", fields: [changedBy], references: [login])
}
